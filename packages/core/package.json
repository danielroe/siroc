{
  "name": "@siroc/core",
  "version": "0.1.2",
  "description": "Zero-config build tooling for Node",
  "keywords": [
    "node",
    "nodejs",
    "typescript",
    "javascript"
  ],
  "repository": "nuxt-contrib/siroc",
  "license": "MIT",
  "sideEffects": false,
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "dist/index.d.ts",
    "!**/*.map"
  ],
  "scripts": {
    "build": "siroc build",
    "prepare": "yarn build",
    "prepublishOnly": "yarn test",
    "test": "run-s test:*",
    "test:types": "tsd",
    "test:unit": "siroc test",
    "watch": "yarn build -w"
  },
  "dependencies": {
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "@rollup/plugin-replace": "^2.3.3",
    "chalk": "^4.1.0",
    "consola": "^2.14.0",
    "defu": "^2.0.4",
    "execa": "^4.0.2",
    "fs-extra": "^9.0.1",
    "glob": "^7.1.6",
    "jiti": "^0.1.11",
    "rollup": "^2.22.1",
    "rollup-plugin-dts": "^1.4.8",
    "rollup-plugin-esbuild": "^2.2.0",
    "sort-package-json": "^1.44.0"
  },
  "devDependencies": {
    "@types/execa": "^2.0.0",
    "@types/fs-extra": "^9.0.1"
  },
  "tsd": {
    "directory": "test/tsd",
    "compilerOptions": {
      "rootDir": "."
    }
  }
}
