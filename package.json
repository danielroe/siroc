{
  "name": "siroc",
  "version": "0.4.0",
  "description": "Zero-config build tooling for Node",
  "keywords": [
    "node",
    "nodejs",
    "typescript",
    "javascript",
    "rollup",
    "bundle",
    "package"
  ],
  "repository": "nuxt-contrib/siroc",
  "license": "MIT",
  "sideEffects": false,
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "bin": {
    "siroc": "bin/cli.js",
    "siroc-runner": "bin/runtime.js"
  },
  "files": [
    "dist/**/*",
    "dist/index.d.ts",
    "!**/*.map"
  ],
  "scripts": {
    "bootstrap": "rollup -c && chmod a+x bin/* && yarn build",
    "build": "bin/cli.js build",
    "lint": "yarn lint:all:eslint && yarn lint:all:prettier",
    "lint:all:eslint": "yarn lint:eslint --ext .js,.ts,.vue .",
    "lint:all:prettier": "yarn lint:prettier \"**/*.{js,json,ts,vue}\"",
    "lint:eslint": "eslint --fix",
    "lint:prettier": "prettier --write --loglevel warn",
    "prepare": "yarn bootstrap",
    "prepublishOnly": "yarn lint && yarn test",
    "release": "release-it",
    "test": "jest",
    "watch": "yarn build --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@rollup/plugin-replace": "^2.3.4",
    "cac": "^6.6.1",
    "chalk": "^4.1.0",
    "consola": "^2.15.0",
    "defu": "^3.1.0",
    "esbuild": "^0.7.22",
    "execa": "^4.1.0",
    "fs-extra": "^9.0.1",
    "glob": "^7.1.6",
    "jiti": "^0.1.11",
    "rollup": "^2.32.1",
    "rollup-plugin-dts": "^1.4.13",
    "rollup-plugin-esbuild": "2.5.2",
    "sort-package-json": "^1.46.1",
    "typescript": "^4.0.5",
    "v8-compile-cache": "^2.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@babel/runtime": "^7.12.1",
    "@release-it/conventional-changelog": "^2.0.0",
    "@types/execa": "^2.0.0",
    "@types/fs-extra": "^9.0.2",
    "@types/glob": "^7.1.3",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.5",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "babel-loader": "^8.1.0",
    "codecov": "^3.8.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^4.3.0",
    "jest": "^26.6.1",
    "lint-staged": "^10.5.0",
    "prettier": "^2.1.2",
    "release-it": "14.2.0",
    "tsd": "^0.13.1",
    "typescript": "^4.0.5"
  },
  "tsd": {
    "directory": "test/tsd",
    "compilerOptions": {
      "rootDir": "."
    }
  }
}
