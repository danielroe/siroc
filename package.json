{
  "name": "siroc-base",
  "version": "0.1.2",
  "private": true,
  "description": "Zero-config build tooling for Node",
  "keywords": [
    "node",
    "nodejs",
    "typescript",
    "javascript",
    "rollup",
    "bundle",
    "package"
  ],
  "repository": "nuxt-contrib/siroc",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "rollup -c && chmod a+x packages/*/bin/* && yarn build",
    "build": "packages/cli/bin/cli.js build",
    "lint": "run-s lint:all:*",
    "lint:all:eslint": "yarn lint:eslint --ext .js,.ts,.vue .",
    "lint:all:prettier": "yarn lint:prettier \"**/*.{js,json,ts,vue}\"",
    "lint:eslint": "eslint --fix",
    "lint:prettier": "prettier --write --loglevel warn",
    "prepare": "yarn bootstrap",
    "prepublishOnly": "yarn lint && yarn test",
    "release": "release-it",
    "test": "run-s test:*",
    "test:unit": "packages/cli/bin/cli.js jest",
    "watch": "yarn build --watch"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^1.1.4",
    "@types/jest": "^26.0.4",
    "babel-loader": "^8.1.0",
    "codecov": "^3.7.0",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "release-it": "13.6.5",
    "release-it-yarn-workspaces": "^1.4.0",
    "tsd": "^0.13.1",
    "typescript": "^3.9.7",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "tsd": {
    "directory": "test/tsd",
    "compilerOptions": {
      "rootDir": "."
    }
  }
}
