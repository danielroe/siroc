{
  "name": "siroc",
  "version": "0.2.0",
  "description": "Zero-config build tooling for Node",
  "keywords": [
    "node",
    "nodejs",
    "typescript",
    "javascript",
    "rollup",
    "bundle",
    "package"
  ],
  "repository": "nuxt-contrib/siroc",
  "license": "MIT",
  "sideEffects": false,
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "bin": {
    "siroc": "bin/cli.js",
    "siroc-runner": "bin/runtime.js"
  },
  "files": [
    "dist/**/*",
    "dist/index.d.ts",
    "!**/*.map"
  ],
  "scripts": {
    "bootstrap": "rollup -c && chmod a+x bin/* && yarn build",
    "build": "bin/cli.js build",
    "lint": "run-s lint:all:*",
    "lint:all:eslint": "yarn lint:eslint --ext .js,.ts,.vue .",
    "lint:all:prettier": "yarn lint:prettier \"**/*.{js,json,ts,vue}\"",
    "lint:eslint": "eslint --fix",
    "lint:prettier": "prettier --write --loglevel warn",
    "prepare": "yarn bootstrap",
    "prepublishOnly": "yarn lint && yarn test",
    "release": "release-it",
    "test": "run-s test:*",
    "test:unit": "jest",
    "watch": "yarn build --watch"
  },
  "dependencies": {
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "@rollup/plugin-replace": "^2.3.3",
    "cac": "^6.6.1",
    "chalk": "^4.1.0",
    "consola": "^2.14.0",
    "defu": "^2.0.4",
    "execa": "^4.0.2",
    "fs-extra": "^9.0.1",
    "glob": "^7.1.6",
    "jiti": "^0.1.11",
    "rollup": "^2.23.0",
    "rollup-plugin-dts": "^1.4.9",
    "rollup-plugin-esbuild": "2.2.0",
    "sort-package-json": "^1.44.0",
    "typescript": "^3.9.7",
    "v8-compile-cache": "^2.1.1"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@release-it/conventional-changelog": "^1.1.4",
    "@types/execa": "^2.0.0",
    "@types/fs-extra": "^9.0.1",
    "@types/jest": "^26.0.7",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "babel-loader": "^8.1.0",
    "codecov": "^3.7.2",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.18.2",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "release-it": "13.6.6",
    "tsd": "^0.13.1",
    "typescript": "^3.9.7",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "tsd": {
    "directory": "test/tsd",
    "compilerOptions": {
      "rootDir": "."
    }
  }
}
