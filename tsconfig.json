{
  "compilerOptions": {
    "strict": true,
    "sourceMap": true,
    "target": "es2018",
    "module": "esnext",
    "lib": ["esnext"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "lib",
    "declaration": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "jest"]
  },
  "exclude": ["node_modules", "lib", "test"]
}
